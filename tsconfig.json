{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@wraith/ghost": [
        "../Ghost/src"
      ],
      "@wraith/ghost/*": [
        "../Ghost/src/*"
      ]
    }
  },
  "include": [
    "src",
    "../Ghost/src"
  ],
  "exclude": [
    "node_modules",
    "../Ghost/**/*.stories.tsx",
    "../Ghost/**/*.test.tsx",
    "../Ghost/**/*.test.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "extends": "expo/tsconfig.base"
}
